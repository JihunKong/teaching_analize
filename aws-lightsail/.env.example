# AIBOA AWS Lightsail Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys
OPENAI_API_KEY=sk-your_openai_api_key_here
SOLAR_API_KEY=your_solar_api_key_here
UPSTAGE_API_KEY=your_upstage_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://aiboa_app:your_secure_postgres_password_here@postgres:5432/aiboa

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security
API_SECRET_KEY=your_secure_secret_key_here

# Service URLs (for local development)
TRANSCRIPTION_API_URL=http://localhost:8000
ANALYSIS_API_URL=http://localhost:8001

# AWS Lightsail Production URLs (update after deployment)
# TRANSCRIPTION_API_URL=https://your-lightsail-domain.com
# ANALYSIS_API_URL=https://your-lightsail-domain.com

# Optional: Environment Setting
ENVIRONMENT=development
# ENVIRONMENT=production

# Logging Level
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG

# File Storage Configuration
UPLOAD_MAX_SIZE=100MB
CLEANUP_INTERVAL_HOURS=24

# Performance Settings
MAX_WORKERS=4
REQUEST_TIMEOUT_SECONDS=300