{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Coaching Feedback Schema",
  "description": "Schema for validating coaching feedback output from OpenAI",
  "type": "object",
  "required": [
    "overall_assessment",
    "strengths",
    "areas_for_growth",
    "priority_actions"
  ],
  "properties": {
    "overall_assessment": {
      "type": "string",
      "minLength": 50,
      "maxLength": 500,
      "description": "Brief summary of the teaching session's effectiveness"
    },
    "strengths": {
      "type": "array",
      "minItems": 2,
      "maxItems": 6,
      "items": {
        "type": "string",
        "minLength": 20,
        "maxLength": 300
      },
      "description": "List of specific strengths observed in the teaching"
    },
    "areas_for_growth": {
      "type": "array",
      "minItems": 2,
      "maxItems": 6,
      "items": {
        "type": "string",
        "minLength": 20,
        "maxLength": 300
      },
      "description": "List of specific areas for improvement"
    },
    "priority_actions": {
      "type": "array",
      "minItems": 3,
      "maxItems": 7,
      "items": {
        "type": "string",
        "minLength": 15,
        "maxLength": 200
      },
      "description": "Concrete actionable steps for improvement"
    },
    "pedagogical_recommendations": {
      "type": "object",
      "properties": {
        "stage_balance": {
          "type": "string",
          "minLength": 20,
          "maxLength": 300
        },
        "questioning_strategy": {
          "type": "string",
          "minLength": 20,
          "maxLength": 300
        },
        "cognitive_challenge": {
          "type": "string",
          "minLength": 20,
          "maxLength": 300
        },
        "interaction_quality": {
          "type": "string",
          "minLength": 20,
          "maxLength": 300
        }
      },
      "description": "Recommendations organized by pedagogical dimension"
    },
    "resources_and_strategies": {
      "type": "array",
      "minItems": 2,
      "maxItems": 8,
      "items": {
        "type": "string",
        "minLength": 15,
        "maxLength": 200
      },
      "description": "Suggested resources, frameworks, or strategies"
    },
    "next_session_goals": {
      "type": "array",
      "minItems": 2,
      "maxItems": 5,
      "items": {
        "type": "string",
        "minLength": 15,
        "maxLength": 200
      },
      "description": "Specific goals for the next teaching session"
    }
  }
}
