# AIBOA Authentication Service Environment Configuration

# Application Settings
APP_NAME="AIBOA Authentication Service"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8002
RELOAD=false

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/aiboa
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Security Settings
SECRET_KEY=your-super-secret-key-here-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30
PASSWORD_RESET_EXPIRE_HOURS=24

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://3.38.107.23
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/aiboa/auth.log

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
EMAIL_FROM=noreply@aiboa.com

# External Services
TRANSCRIPTION_SERVICE_URL=http://localhost:8000
ANALYSIS_SERVICE_URL=http://localhost:8001
TRANSCRIPTION_API_KEY=transcription-api-key-prod-2025
ANALYSIS_API_KEY=analysis-api-key-prod-2025

# File Upload Settings
UPLOAD_MAX_SIZE=524288000
ALLOWED_FILE_TYPES=mp3,mp4,wav,m4a,webm
UPLOAD_PATH=/tmp/uploads

# Session Management
MAX_SESSIONS_PER_USER=5
SESSION_CLEANUP_INTERVAL=3600

# User Management
DEFAULT_USER_ROLE=regular_user
AUTO_VERIFY_EMAIL=false
ALLOW_SELF_REGISTRATION=false

# Analytics and Monitoring
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60

# Testing
TESTING=false
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/aiboa_test